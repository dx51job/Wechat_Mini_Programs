/* pages/chats/index.wxss */

.message_item {
  display: flex;
  flex-direction: row;
  background: #fff;
  border-bottom: 1rpx solid #ececec;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  margin: 16rpx;
}

.message_content {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding-left: 24rpx;
  align-self: center;
}

.name {
  font-size: 14px;
  margin-bottom: 8rpx;
}

.recent {
  font-size: 12px;
  color: #999;
}

.time {
  display: flex;
  width: 180rpx;
  align-items: center;
  justify-content: flex-end;
  font-size: 12px;
  color: #999;
  margin-right: 24rpx;
}
