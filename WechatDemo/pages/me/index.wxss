/* pages/me/index.wxss */
page {
  background: #ececec;
}

.person_info {
  display: flex;
  margin-top: 24rpx;
  flex-direction: row;
  background: #fff;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 10rpx;
}

.person_info_content {
  display: flex;
  flex: 1;
  flex-direction: column;
  padding-left: 24rpx;
  align-content: center;
  align-self: center;
}

.name {
  font-size: 18px;
  margin-bottom: 8rpx;
}

.wxname {
  font-size: 14px;
  color: #999;
}

.qrcode {
  display: flex;
  width: 180rpx;
  align-items: center;
  justify-content: flex-end;
  margin-right: 24rpx;
}

.qrcode_image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 36rpx;
}