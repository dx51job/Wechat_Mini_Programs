/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.menu_item {
  display: flex;
  flex-direction: row;
  background: #fff;
  border-bottom: 1rpx solid #ececec;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin: 16rpx;
}

.menu_content {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding-left: 24rpx;
  align-self: center;
  align-content: center;
}

.title {
  font-size: 14px;
}

.header {
  display: flex;
  height: 36rpx;
  flex: 1;
  flex-direction: row;
  align-content: center;
  align-self: center;
  font-size: 12px;
  padding-left: 36rpx;
  background: #ececec;
}
