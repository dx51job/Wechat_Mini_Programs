/* pages/mainPage/index.wxss */

page {
  background-color: #eee;
}

.list_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom: 5rpx solid #ddd;
}

.list_item_image {
  width: 680rpx;
  height: 300rpx;
  margin-top: 35rpx;
}

.list_item_title {
  font-size: 14pt;
  font-weight: bold;
  margin-top: 20rpx;
  margin-bottom: 35rpx;
}

.hint {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.hint_text {
  margin-top: 60rpx;
  color: #e64340;
  font-size: 17pt;
}