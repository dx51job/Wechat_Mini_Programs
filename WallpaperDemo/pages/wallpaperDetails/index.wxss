/* pages/wallpaperDetails/index.wxss */

page {
  background-color: #eee;
}

.content {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wallpaper_image {
  width: 100%;
}

.wallpaper_title {
  width: 100%;
  text-align: center;
  font-size: 14pt;
  font-weight: bold;
  margin-top: 20rpx;
}

.wallpaper_description {
  font-size: 13pt;
  margin: 20rpx;
  text-indent: 2em;
}

.wallpaper_size {
  width: 100%;
  text-align: center;
  margin: 50rpx 0;
  font-size: 11pt;
  font-weight: bold;
}

.save {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50px;
  height: 50px;
  background-color: #d8d8d8;
  border: 1px solid #b3b3b3;
  border-radius: 8px;
}

.hint {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.hint_text {
  margin-top: 60rpx;
  color: #e64340;
  font-size: 17pt;
}
