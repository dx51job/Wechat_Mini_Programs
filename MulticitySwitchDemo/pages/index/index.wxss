/**index.wxss**/

.choose_city {
  background: #f1f1f1;
  color: #999;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  padding-left: 10px;
}

.choose_city .name {
  color: #666;
}

.search_letter {
  position: fixed;
  top: 50px;
  right: 0;
  width: 20px;
  background: #fff;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: skyblue;
  z-index: 1;
}

.history_city, .hot_city {
  margin-bottom: 20rpx;
}

.history_city .title, .hot_city .title {
  color: #999;
  font-size: 14px;
  display: block;
  padding: 20rpx 0 10rpx 20rpx;
}

.history_city .container text, 
.hot_city .container text {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  width: 28%;
  color: #666;
  border: 2rpx solid #eee;
  border-radius: 4rpx;
  margin: 20rpx 0 0 20rpx;
  text-align: center;
}

.selection {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.item_letter {
  display: flex;
  background-color: #f8f8f8;
  padding-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.item_city {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  padding-left: 20rpx;
  border-bottom: 4rpx solid #f8f8f8;
}
